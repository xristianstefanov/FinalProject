@model LeagueOfLegendsChampions.Web.ViewModels.Skins.SkinsForSingleChampViewModel
@{
    ViewData["Title"] = "All";
}

<header>
    <style>
        h1 {
            color: floralwhite;
            text-align: center;
        }

        h5{
            color: floralwhite;
            text-decoration: underline;
            text-underline-position: under;
        }

        hr {
            border: none;
            border-top: 3px ridge floralwhite;
            color: floralwhite;
            overflow: visible;
            text-align: center;
            height: 5px;
        }

        .carousel {
            margin-bottom: 70px;
            border: solid;
            color: floralwhite;
        }
    </style>
</header>
<body>
    <h1>@this.Model.ChampionName's Skins:</h1>
    <hr>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @{int skinsCount = this.Model.Skins.ToList().Count;}
            @for (int i = 0; i < skinsCount; i++)
            {
                if (i == 0)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                }
                else
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                }
            }
        </ol>
        <div class="carousel-inner">
            @{int counter = 0;}
            @foreach (var skin in this.Model.Skins)
            {
                @if (counter == 0)
                {
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@skin.SkinImageUrl">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@skin.SkinName</h5>
                        </div>
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@skin.SkinImageUrl">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@skin.SkinName</h5>
                        </div>
                    </div>
                }
                counter++;
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</body>

