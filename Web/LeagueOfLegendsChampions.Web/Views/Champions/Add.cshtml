@model LeagueOfLegendsChampions.Web.ViewModels.Champions.AddChampionInputModel
@{ 
    this.ViewData["Title"] = "Add new champion";
}

<form method="post" class="col-md-6 offset-md-3">
    <h1 style="color:floralwhite">@this.ViewData["Title"]</h1>
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label style="color:floralwhite" asp-for="Name"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" />
</form>