@{
    this.ViewBag.Title = "Chat";
}

<h1 style="color: floralwhite">@this.ViewBag.Title</h1>

<div class="container">
    <div id="message-holder" class="mt-3 d-flex justify-content-start">
        <h4 style="color: floralwhite">Message</h4>
        <input class="w-75 ml-4 pl-3" type="text" id="messageInput" placeholder="Message..." />
        <button id="sendButton" class="ml-4 btn btn-outline-white btn-lg">Send</button>
    </div>
    <hr style="height: 5px;" class="bg-white" />
    <div id="messagesList" style="font-size: 28px;color: floralwhite">
    </div>
</div>

@section Scripts {
    <script src="~/js/chatNeeded.js" asp-append-version="true"></script>
}